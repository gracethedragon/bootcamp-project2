      <a href="/users/<%=userid%>?sort=ascreviews" class="dropdown-item">Reviews (lowest to highest)</a>
      <a href="/users/<%=userid%>?sort=descreviews" class="dropdown-item">Reviews (highest to lowest)</a>
    </div>
  </div>
</div>
<div class="row px-3">

<% data.forEach(data=>{ %>
  <%if(data.reviews> 0) {%>
    <span class="text-secondary"><a href="/recipes/<%=data.id%>">
        <%=data.name%>
      </a> , <%=data.rating%>‚≠ê, <%=data.reviews%> reviews</span><br />
    <%} else {%>
      <span class="text-secondary"><a href="/recipes/<%=data.id%>">
          <%=data.name%>
        </a>, be the first to review!</span>
      <br />
      <%}})%>
      <%}%>
</div>
